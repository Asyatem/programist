#include <stdio.h>
#include<locale.h>
#include<math.h>
int main(){
  int f;
   printf("Выберите одну из 5 программ: ");
   scanf("%d",&f);
   switch(f) {
       case 1:
           printf("Выбрано 1 задание.Дано вещественное число — цена 1 кг конфет. Вывести стоимость 0.1, 0.2, ... , 1 кг конфет.\n");
           float c, m;
              printf("Цена за 1 кг конфет:");
              scanf ("%f", &c);
               for  (m = 0.1; m<1.1;  m+=0.1)
                   printf("%.2f кг конфет стоят: %.2f \n ",m,c*m);
                break;
       case 2:
           printf("Выбрано 2 задание.Дано целое число N (> 0). Найти произведение 1.1 · 1.2 · 1.3 · . . . (N сомножителей).\n");
           int s, I; float R=1;
               printf("Введите целое число N сомножителей:");
               scanf ("%i", &s);
               for  (I =0; I<=s; ++I)
                   R *= 1.0+(float)I/10;
            printf("rez = %f \n ",R);
       break;
       case 3:
           printf("Выбрано 3 задание.Дано целое число N (> 0). Найти квадрат данного числа, используя для его вычисления следующую формулу: N2 = 1 + 3 + 5 + . . . + (2·N − 1). После добавления к сумме каждого слагаемого выводить текущее значение суммы.\n");
             int n2, x3, q;
               printf("Целое число N: ");
                   scanf("%d",&n2);
           for(q=0; q<=(2*n2-1); q+=2)
               x3 += q;
               printf("Квадрат данного числа: %d\n",x3);
           break;
       case 4:
           printf("Выбрано 4 задание.Дано вещественное число A и целое число N (> 0). Используя один цикл, найти сумму 1 + A + A^2 + A^3 + . . . + A^N.\n");
           float A, A1; int N, i4;
           printf("Введите число А:");
           scanf("%f",&A);
           printf("Введите число N:");
           scanf("%d",&N);
           for(i4=0; i4<=N; i4++)
               A1 += pow(A,i4);
           printf("Сумма: %f\n",A1);
           break;
       case 5:
           printf("Выбрано 5 задание.Дано вещественное число A и целое число N (> 0). Используя один цикл, найти значение выражения: 1 − A + A^2 − A^3 + . . . ± A^N.\n");
           float A2, A3=1, r=1; int N2, i;
           printf("Введите число А:");
           scanf("%f",&A2);
           printf("Введите число N:");
           scanf("%d",&N2);
           for(i=1; i<=N2; i++){
               A3 *= -A2;
               r += A3;
           }
           printf("Значение выражения: %f\n",r);
           break;
   }
   return 0;
}
